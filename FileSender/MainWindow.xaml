<Window
    x:Class="FileSender.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="檔案傳送器"
    Width="400"
    Height="250"
    AllowDrop="True"
    AllowsTransparency="True"
    Drop="Window_Drop"
    MouseLeftButtonDown="MainGrid_MouseLeftButtonDown"
    ShowInTaskbar="False"
    Topmost="True"
    WindowStyle="None">
    <Window.Background>
        <ImageBrush ImageSource="./SenderImage.jpg" Stretch="UniformToFill" />
    </Window.Background>
    <Grid Margin="10">

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button
                Padding="10,5"
                Background="White"
                BorderBrush="Transparent"
                Click="Button_Click"
                Content="Close" />
            <StackPanel
                Margin="0,20,0,0"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <TextBlock
                    Margin="0,0,5,0"
                    VerticalAlignment="Center"
                    FontSize="16"
                    FontWeight="Bold"
                    Foreground="white"
                    Text="透明度：" />
                <Slider
                    x:Name="OpacitySlider"
                    Width="200"
                    IsSnapToTickEnabled="True"
                    Maximum="1.0"
                    Minimum="0.1"
                    TickFrequency="0.1"
                    ValueChanged="OpacitySlider_ValueChanged"
                    Value="1.0" />
                <TextBlock
                    x:Name="OpacityValueText"
                    Margin="10,0,0,0"
                    VerticalAlignment="Center"
                    Text="100%" />

            </StackPanel>
            <TextBlock
                Margin="0,30,0,10"
                HorizontalAlignment="Center"
                FontSize="16"
                FontWeight="Bold"
                Foreground="white"
                Text="請輸入目標 IP" />
            <TextBox
                x:Name="IpTextBox"
                Width="100"
                Height="30"
                HorizontalAlignment="Center"
                VerticalContentAlignment="Center"
                Text="127.0.0.1" />
            <TextBlock
                Margin="0,20,0,0"
                HorizontalAlignment="Center"
                FontSize="16"
                FontWeight="Bold"
                Foreground="white"
                Text="請將檔案拖曳進視窗" />
        </StackPanel>
    </Grid>
</Window>